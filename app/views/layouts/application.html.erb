<!DOCTYPE html>
<html>
  <head>
    <title>MyGreatApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <header>
  <a href="/">Home</a>
  <% if @current_user %>
    <p><%= @current_user.email %></p>
    <a href="/logout">Logout</a>
  <% else %>
    <a href="/login">Login</a>
  <% end %>
  </header>
    <%= yield %>
  </body>
</html>
